{
  "name": "node-scripts-docs",
  "version": "0.0.14",
  "description": "Generate documentation for your `package.json` scripts.",
  "license": "UNLICENSED",
  "author": "Oliver Salzburg <oliver.salzburg@gmail.com>",
  "homepage": "https://oliversalzburg.github.io/node-scripts-docs/",
  "repository": {
    "type": "git",
    "url": "https://github.com/oliversalzburg/node-scripts-docs.git"
  },
  "bugs": {
    "url": "https://github.com/oliversalzburg/node-scripts-docs/issues"
  },
  "bin": {
    "nsd": "output/node-scripts-docs.js"
  },
  "scripts": {
    "build": "tsc",
    "docs:build": "docker run --rm -it -p 8000:8000 -v ${PWD}:/docs ghcr.io/oliversalzburg/mkdocs-material-ex:main build --site-dir=public",
    "docs:scripts": "yarn nsd-debug",
    "docs:serve": "docker run --rm -it -p 8000:8000 -v ${PWD}:/docs ghcr.io/oliversalzburg/mkdocs-material-ex:main",
    "npm:publish": "yarn build && npm publish",
    "npm:publish:patch": "yarn build && npm version patch && npm publish",
    "nsd-debug": "yarn build && node output/node-scripts-docs.js",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "elapsed-time": "0.0.1",
    "globby": "11.1.0",
    "marked": "4.0.16",
    "minimist": "1.2.6",
    "tslib": "2.4.0"
  },
  "devDependencies": {
    "@types/jest": "27.5.1",
    "@types/marked": "4.0.3",
    "@types/minimist": "1.2.2",
    "@types/node": "17.0.10",
    "@types/prettier": "2.6.2",
    "@types/prettier-package-json": "2.1.1",
    "@yarnpkg/sdks": "2.6.2",
    "eslint": "8.16.0",
    "jest": "28.1.0",
    "lint-staged": "12.4.2",
    "prettier": "2.6.2",
    "prettier-package-json": "2.6.3",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-sh": "0.11.0",
    "ts-jest": "28.0.3",
    "typescript": "4.7.2"
  },
  "keywords": [
    "documentation",
    "mkdocs",
    "npm",
    "package.json",
    "scripts",
    "yarn"
  ],
  "packageManager": "yarn@3.2.1"
}
